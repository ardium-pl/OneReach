{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ES2022",
      "outDir": "./dist",
      "strict": true,
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "emitDeclarationOnly": true,
      "declaration": true,
      "allowImportingTsExtensions": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }